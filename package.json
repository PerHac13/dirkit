{
  "name": "dirkit",
  "version": "0.1.0",
  "description": "Directory management and visualization toolkit",
  "main": "dist/index.js",
  "bin": {
    "dirkit": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --config ./config/prettierrc.json --write .",
    "prepare": "husky install",
    "commit": "cz"
  },
  "keywords": [
    "directory",
    "file-system",
    "cli",
    "tool"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.50.0",
    "@typescript-eslint/parser": "^6.7.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --config config/prettierrc.json --write",
      "eslint --config config/eslintrc.js --fix"
    ]
  },
  "commitlint": {
    "config": "./config/commitlint.config.js"
  },
  "prettier": {
    "prettier": "./config/prettierrc.json"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
